{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5", "es2015", "dom"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationDir": "lib",
    "sourceMap": false,
    "baseUrl": "src"
  },
  "include": [
    "src"
  ]
}
