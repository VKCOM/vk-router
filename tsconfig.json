{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": ["es5", "es2015", "dom"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "declaration": true, 
    "declarationDir": "dist", 
    "sourceMap": false,
    "baseUrl": "src"
  },
  "include": [
    "src"
  ]
}
